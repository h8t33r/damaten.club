<p id="notice"><%= notice %></p>
<a class="waves-effect waves-light btn" href="/games/new">Добавить результат игры</a>

<table class="striped result">
  <thead>
    <tr>
      <th>C: <%= @games.count %></th>
      <th colspan="2">Восток</th>
      <th colspan="2">Юг</th>
      <th colspan="2">Запад</th>
      <th colspan="2">Север</th>
      <th style="text-align: right;">Сумма</th>
    </tr>
  </thead>
  <tbody>
  <% @games.each do |game| %>
    <tr>
      <td><%= link_to game.created_at.strftime("%Y.%m.%d"), game %></td>

      <td><%= @players.find(game.score["east"]["player_id"]).name %></td>
      <td><%= game.score["east"]["player_score"] %></td>

      <td><%= @players.find(game.score["south"]["player_id"]).name %></td>
      <td><%= game.score["south"]["player_score"] %></td>

      <td><%= @players.find(game.score["west"]["player_id"]).name %></td>
      <td><%= game.score["west"]["player_score"] %></td>
      
      <td><%= @players.find(game.score["north"]["player_id"]).name %></td>
      <td><%= game.score["north"]["player_score"] %></td>

      <td style="text-align: right;"><%=
        game.score["east"]["player_score"].to_i +
        game.score["south"]["player_score"].to_i +
        game.score["west"]["player_score"].to_i +
        game.score["north"]["player_score"].to_i
      %></td>
    </tr>
  <% end %>
  </tbody>
</table>