<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Фамилия Имя</th>
      <th>Ник</th>
      <th>Активирован?</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.nickname %></td>
        <td><%= if player.activated == true then "Да" else "Нет" end %></td>
        <td><%= link_to 'Детализация', player %></td>
        <td><%= link_to 'Редактировать', edit_player_path(player) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

