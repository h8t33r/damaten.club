<p id="notice"><%= notice %></p>
<a class="waves-effect waves-light btn" href="/players/new">Добавить игрока</a>
<table class="striped result">
  <thead>
    <tr>
      <th>Фамилия Имя</th>
      <th>Ник</th>
      <th>Активирован?</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player %></td>
        <td><%= player.nickname %></td>
        <td><%= if player.activated == true then "Да" else "Нет" end %></td>
        <td><%= link_to 'Редактировать', edit_player_path(player) %></td>
      </tr>
    <% end %>
  </tbody>
</table>