<h3>Игроки</h3>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Имя Фамилия</th>
      <th>Ник</th>
      <th>Активация</th>
      <th>Email</th>
      <th>Создан</th>
      <th>Изменен</th>
      <th>Рейтинг</th>
      <th colspan="2">Управление</th>
    </tr>
  </thead>
  <tbody>
  <% @players.each do |player| %>
    <tr>
      <td><%= player.id %></td>
      <td><%= player.name %></td>
      <td><%= player.nickname %></td>
      <td><%= player.activated %></td>
      <td><%= player.email %></td>
      <td><%= player.created_at %></td>
      <td><%= player.updated_at %></td>
      <td><%= player.rank %></td>
      <td><%= link_to 'Редактировать', edit_player_path(player) %></td>
      <td><%= link_to 'Удалить', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
  <% end %>
</table>