<h3>Наборы правил (pre-alpha)</h3>
<% if user_signed_in? %>
<div class="row">
  <div class="col s8">
    <a class="btn waves-effect waves-light" href="/admin/rules/new">
      <i class="material-icons left">style</i> Добавить набор
    </a>
  </div>
</div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Правила</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.name %></td>
        <td><%= rule.data %></td>
        <td><%= link_to 'Show', rule %></td>
        <td><%= link_to 'Edit', edit_rule_path(rule) %></td>
        <td><%= link_to 'Destroy', rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
